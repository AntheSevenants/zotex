{
  "name": "zotex",
  "publisher": "raykr",
  "displayName": "Zotero BBT for LaTeX",
  "description": "Zotero with Better Bibtex support for LaTeX.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zotex.exportBibLatex",
        "title": "Zotex: Export BibLaTeX"
      },
      {
        "command": "zotex.addCitation",
        "title": "Zotex: Add Citation for Pandoc/Latex"
      },
      {
        "command": "zotex.addCiteBib",
        "title": "Zotex: Cite and Create Bibliography for Pandoc/LaTeX"
      },
      {
        "command": "zotex.addMdCiteBib",
        "title": "Zotex: Cite and Create Bibliography for Markdown"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.5.0",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@orcid/bibtex-parse-js": "^0.0.25",
    "got": "^13.0.0"
  }
}
